@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class=" container">
    <form asp-area="" asp-controller="Account" asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control form-theme-login" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" type="password" class="form-control form-theme-login" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="ReturnUrl" />

        <div class="form-group">
            <span class="text-danger" asp-validation-for="IncorrectInput"></span>
        </div>
        <div class="form-group text-right mt-2">

            <button type="submit" class="btn btn-primary">Login <i class="fa fa-arrow-right"></i></button>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }